<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center">Forgot Password</h1>
    <div class="forgot-form">
        <form action="/forgot" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="firstName" placeholder="John" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastName" placeholder="Smith" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="john@smith.com" autofocus>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Reset Password</button>
            </div>
        </form>
    </div>
</div>

<% include ./partials/footer %>