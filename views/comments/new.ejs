<% include ../partials/header %>

<h1 style="text-align: center;">Add New Comment to <%= tournamentGroup.groupName%></h1>
<div class="row">
    <div style="width: 30%; margin: 25px auto;">
         <form action="/tournamentGroups/<%= tournamentGroup.groupName%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
            </div>
        </form>
        <script>
            document.write('<a href="' + document.referrer + '">Go Back</a>');
        </script>
    </div>

</div>

<% include ../partials/footer %>